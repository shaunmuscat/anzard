.container
  .container-flex
    .container-fixed-item
      %h2 Please enter your email and password to log in
      .clearfix
        = f.label :email, "Email:"
        .input
          = f.text_field :email, class: "xlarge"
      .clearfix
        = f.label :password, "Password:"
        .input
          = f.password_field :password, class: "xlarge"
    .container-flex-item
      = link_to (image_tag 'banner_fertility_society_australia.png', class: 'logo'), 'https://www.fertilitysociety.com.au/'
    .container-flex-item
      = link_to (image_tag 'logo_unsw.png', class: 'logo'), 'https://www.unsw.edu.au/'
  .actions
    = f.submit "Log in", class: "btn primary"
    = link_to "Forgot your password?", new_user_password_path, class: "btn"
