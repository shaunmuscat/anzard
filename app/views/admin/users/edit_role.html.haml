- title "Edit Access Level For #{@user.email}"

= form_for(@user, url: update_role_admin_user_path(@user)) do |f|
  = render "shared/error_messages", target: @user
  -# Disable unit selection unless user is an administrator moving to a data supervisor/provider role where they need to be able to select a unit.
  = render partial: "role_fields", locals: {f: f, disable_unit_select: !@user.super_user?}
  .actions
    = f.submit "Save", class: 'btn primary'
    = link_to 'Back', admin_user_path(@user), class: 'btn'
