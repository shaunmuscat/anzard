%h2 Data Entry Forms In Progress
- if @responses.blank?
  %p There are no data entry forms in progress.
- else
  %table#responses.bordered-table
    %thead
      %tr
        %th Baby Code
        %th Registration Type
        %th Year of Registration
        %th Created By
        %th Status
        %th Date Started
        %th
    - @responses.each do |r|
      %tr{id: "response_#{r.id}"}

        %td= r.baby_code
        %td= r.survey.name
        %td= r.year_of_registration
        %td= r.user.full_name
        %td= r.validation_status
        %td= time_tag r.created_at
        %td
          %p
            = link_to("Edit", edit_response_path(r), class: 'btn') if can?(:edit, r)
            = link_to "View Summary", r, class: 'btn'
          %p
            = link_to "Review Answers", review_answers_response_path(r), class: 'btn'
          %p
            %div{id: "confirm_delete_#{r.baby_code}", class: 'modal hide fade'}
              %div.modal-header
                = link_to "Ã—", '#', class: 'close'
                %h1= 'Confirm Delete'
              %div.modal-body
                %p= "You are about to delete this form in progress for BabyCODE #{r.baby_code}. This action cannot be undone. Are you sure you want to delete this form?" 
              %div.modal-footer
                = link_to 'Delete', response_path(r), method: :delete, class: 'btn danger'
                = link_to 'Cancel', '#', class: 'btn btn-cancel'
            = link_to('Delete', '', 'data-controls-modal' => "confirm_delete_#{r.baby_code}", class: 'btn', 'data-backdrop' => 'static', 'data-keyboard' => 'true') if can?(:destroy, r)
          %p= render 'responses/submit_or_warning', response: r
  


    



