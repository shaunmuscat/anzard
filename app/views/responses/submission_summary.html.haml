- content_for :tabs do
  = render 'pages/nav'

- title 'Submission Summary'

%table#submission_summary.bordered-table
  %thead
    %tr
      %th Treatment Data
      %th Year of Treatment
      %th Unit Name
      %th Site #
      %th Status
      %th Records
    %tbody
      - surveys.each do |survey|
        - stats = StatsReport.new(survey)
        - unless stats.empty?
          - stats.years.each do |year|
            - Clinic.order(:unit_code, :site_code).each do |clinic|
              - [{name: Response::STATUS_SUBMITTED, str: Response::STATUS_SUBMITTED},
                 {name: Response::STATUS_UNSUBMITTED, str: 'In Progress'}].each do |status|
                - num_status = stats.response_count(year, status[:name], clinic.id)
                - unless num_status == 'none'
                  %tr
                    %td= survey.name
                    %td= year
                    %td= clinic.unit_name
                    %td= clinic.site_code
                    %td= status[:str]
                    %td= num_status